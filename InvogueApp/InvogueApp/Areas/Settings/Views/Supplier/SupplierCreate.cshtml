@{
    ViewBag.Title = "Supplier";
    if (ViewBag.CallingForm1 == "index")
    {
    }
    else
    {
        <ul class="breadcrumb">
            <li><a href="#">@ViewBag.CallingForm</a></li>
            <li><a href="@ViewBag.CallingViewPage" class="active">@ViewBag.CallingForm1</a></li>
            @if (@ViewBag.CallingForm2 != null)
            {
                <li><a href="#" class="active">@ViewBag.CallingForm2</a></li>
            }
        </ul>
    }
}
<style>
    /*.product_row_content {
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .product_row_content .form-group {
        padding-right: 15px;
    }*/

    .land_name_input {
        display: flex;
        align-items: center;
        width: 100%;
        flex-wrap: wrap;
    }

    .expense .form-group:first-child {
        width: 31.33%;
        padding-right: 15px;
    }

    .expense .form-group {
        width: 31.33%;
        padding-right: 15px;
    }

        .expense .form-group .form-inner13 {
            display: flex;
            align-items: center;
        }

            .expense .form-group .form-inner13 .inline-left-col {
                width: 80px;
                padding-top: 0px;
                padding-right: 15px;
            }

            .expense .form-group .form-inner13 .inline-right-col {
                width: calc(100% - 80px);
            }


    .expense .btn_content {
        width: 6%;
        margin-bottom: 5px;
    }
</style>

<div class="panel panel-transparent">
    <div class="panel-heading">
        <div class="panel-title">
            Supplier
        </div>
    </div>
    <div class="panel-body">
        <div class="row form-horizontal xl-mlr10" ng-controller="supplierController" ng-init="loadDropdowns()">
            <form name="supplierForm" ng-init="loadDropdowns()">
                <input type="text" class="form-control hidden" ng-model="supplier.SupplierID" placeholder="" readonly />
                <div class="row col-xs-12 col-sm-12 col-md-12 col-lg-12 xl-mb30">
                    <ul class="nav nav-tabs nav-tabs-fillup" data-init-reponsive-tabs="dropdownfx">
                        <li ng-class="{active:isSet(1)}"><a ng-click="setTab(1)"><span>Supplier</span></a></li>
                        <li ng-class="{active:isSet(2)}"><a ng-click="setTab(2)"><span>Contact</span></a></li>
                        <li ng-class="{active:isSet(3)}"><a ng-click="setTab(3)"><span>Transaction</span></a></li>
                        <li ng-class="{active:isSet(4)}"><a ng-click="setTab(4)"><span>Product</span></a></li>


                    </ul>
                    <div id="myTabContent" class="tab-content" style="padding-left: 0px; padding-right: 0px;">
                        <div class="tab-pane fade increment_status" ng-class="{active:isSet(1), in:isSet(1)}" ng-show="isSet(1)">
                            <div class="row">
                                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 xl-mb30">
                                    <div class="form-group">
                                        <div class="form-inner13">
                                            <label class="left-col control-label">Supplier Code</label>
                                            <div class="right-col">
                                                <input type="text" class="form-control" ng-model="supplier.SupplierCode" required />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="form-inner13">
                                            <label class="left-col control-label">Supplier Name</label>
                                            <div class="right-col">
                                                <input type="text" class="form-control" ng-model="supplier.SupplierName" required/>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="form-inner13">
                                            <label class="left-col control-label">Note</label>
                                            <div class="right-col">
                                                <input type="text" class="form-control" ng-model="supplier.Note" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="tab-pane fade" ng-class="{active:isSet(2), in:isSet(2)}" ng-show="isSet(2)">
                            <div class="row">
                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 xl-mb30">
                                    <div class="row">
                                        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 xl-mb30 ">
                                            <div class="form-group">
                                                <div class="form-inner13">
                                                    <label class="left-col control-label">Contact Person</label>
                                                    <div class="right-col">
                                                        <input type="text" class="form-control" ng-model="supplier.ContactPerson" />
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="form-inner13">
                                                    <label class="left-col control-label">Phone</label>
                                                    <div class="right-col">
                                                        <input type="text" class="form-control" ng-model="supplier.Phone" />
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="form-inner13">
                                                    <label class="left-col control-label">Mobile</label>
                                                    <div class="right-col">
                                                        <input type="text" class="form-control" ng-model="supplier.Mobile" />
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="form-inner13">
                                                    <label class="left-col control-label">Email</label>
                                                    <div class="right-col">
                                                        <input type="text" class="form-control" ng-model="supplier.Email" />
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="form-inner13">
                                                    <label class="left-col control-label">Country of Origin</label>
                                                    <div class="right-col">
                                                        <select2 style="width: 100%;" placeholder="--Select Country--" ng-model="supplier.CountryID" s2-options="coun.CountryID as coun.Name for coun in countryList">

                                                        </select2>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="form-inner13">
                                                    <label class="left-col control-label">Website</label>
                                                    <div class="right-col">
                                                        <input type="text" class="form-control" ng-model="supplier.Website" />
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="form-inner13">
                                                    <label class="left-col control-label">Supplier Address</label>
                                                    <div class="right-col">
                                                        <textarea type="text" rows="4" class="form-control" ng-model="supplier.Address"></textarea>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane fade" ng-class="{active:isSet(3), in:isSet(3)}" ng-show="isSet(3)">
                            <div class="row">
                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 xl-mb30">
                                    <div class="row">
                                        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 xl-mb30 ">
                                            <div class="form-group">
                                                <div class="form-inner13">
                                                    <label class="left-col control-label">Bank Name</label>
                                                    <div class="right-col">
                                                        <input type="text" class="form-control" ng-model="supplier.BankName" />
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="form-inner13">
                                                    <label class="left-col control-label">Bank A/C No</label>
                                                    <div class="right-col">
                                                        <input type="text" class="form-control" ng-model="supplier.BankAcNO" />
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="form-inner13">
                                                    <label class="left-col control-label">Payment Terms</label>
                                                    <div class="right-col">
                                                        <input type="text" class="form-control" ng-model="supplier.PaymentTerms" />
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="form-inner13">
                                                    <label class="left-col control-label">Credit Limit</label>
                                                    <div class="right-col">
                                                        <input type="text" class="form-control" ng-model="supplier.CreditLimit" />
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="form-inner13">
                                                    <label class="left-col control-label">Currency</label>
                                                    <div class="right-col">
                                                        <select2 style="width: 100%;" placeholder="--Select Currency--" ng-model="supplier.CurrencyID" s2-options="coun.CurrencyID as coun.Name for coun in currencyList" required>

                                                        </select2>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="tab-pane fade" ng-class="{active:isSet(4), in:isSet(4)}" ng-show="isSet(4)">
                            <div class="row">
                                <div class="col-xs-12 col-sm-12 col-md-10 col-lg-10 xl-mb30">
                                    <div class="row">
                                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 xl-mb30 ">
                                            <div class="land_name_input expense" ng-repeat="details in supplierProductDtls">
                                                <div class="form-group">
                                                    <div class="form-inner13">
                                                        <label class="inline-left-col control-label">Category</label>
                                                        <div class="inline-right-col">
                                                            <select2 style="width:100%" placeholder="--Select Category--" ng-click="loadSubCategorys(details.CategoryID)" ng-model="details.CategoryID" s2-options="data.CategoryID as data.Name for data in categoryList">

                                                            </select2>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <div class="form-inner13">
                                                        <label class="inline-left-col control-label">Sub Category</label>
                                                        <div class="inline-right-col">
                                                            <select2 style="width:100%" placeholder="--Select Sub Category--" ng-model="details.SubCategoryID" s2-options="data.SubCategoryID as data.Name for data in subCategoryLists">

                                                            </select2>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <div class="form-inner13">
                                                        <label class="inline-left-col control-label">Product</label>
                                                        <div class="inline-right-col">
                                                            <select2 style="width:100%" placeholder="--Select Product--" @*ng-change="updateDetailsData(details)"*@ ng-model="details.ProductID" s2-options="data.ProductID as data.Name for data in productList">

                                                            </select2>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="btn_content">
                                                    <button type="button" ng-click="removeSupplierProductRow($index, details)" class="btn btn-danger btn-xs expense_item_btn">
                                                        <i class="fa fa-close"></i>
                                                    </button>
                                                </div>
                                            </div>

                                            <div class="land_name_input expense" style="padding-bottom: 15px;">

                                                <div class="form-group">
                                                    <div class="form-inner13">
                                                        <label class="inline-left-col control-label">Category</label>
                                                        <div class="inline-right-col">
                                                            <select2 style="width:100%" ng-change="loadSubCategory(details.CategoryID)" placeholder="--Select Category--" ng-model="details.CategoryID" s2-options="data.CategoryID as data.Name for data in categoryList">

                                                            </select2>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <div class="form-inner13">
                                                        <label class="inline-left-col control-label">Sub Category</label>
                                                        <div class="inline-right-col">
                                                            <select2 style="width:100%" placeholder="--Select Sub Category--" ng-model="details.SubCategoryID" s2-options="data.SubCategoryID as data.Name for data in subCategoryList">

                                                            </select2>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <div class="form-inner13">
                                                        <label class="inline-left-col control-label">Product</label>
                                                        <div class="inline-right-col">
                                                            <select2 style="width:100%" placeholder="--Select Product--" ng-model="details.ProductID" s2-options="data.ProductID as data.Name for data in productList">

                                                            </select2>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="btn_content">
                                                    <button type="button" ng-click="addSupplierProductRow(details)" class="btn btn-success btn-xs">
                                                        <i class="fa fa-plus"></i>
                                                    </button>
                                                </div>

                                            </div>

                                            <div class="row">
                                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                                    <div class="form-group">
                                                        <div class="form-inner12">
                                                            <label for="fname" class="left-col control-label"></label>
                                                            <div class="right-col mt-org1" style="text-align:right">
                                                                <button type="button" class="btn btn-success custom-btn1" name="Submit" data-ng-click="saveSupplier()">Submit</button>
                                                                <button type="button" class="btn btn-default custom-btn1" name="Clear" ng-click="Reload()"><i class="pg-close"></i> Clear</button>
                                                            </div>
                                                            <div class="clr"></div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>

            </form>
        </div>
    </div>
</div>




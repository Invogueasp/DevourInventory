@{
    ViewBag.Title = "Page";
    if (ViewBag.CallingForm1 == "index")
    {
    }
    else
    {
        <ul class="breadcrumb">
            <li><a href="#">@ViewBag.CallingForm</a></li>
            <li><a href="@ViewBag.CallingViewPage" class="active">@ViewBag.CallingForm1</a></li>
            @if (@ViewBag.CallingForm2 != null)
            {
                <li><a href="#" class="active">@ViewBag.CallingForm2</a></li>
            }
        </ul>
    }
}
<div class="panel panel-transparent">
    <div class="panel-heading">
        <div class="panel-title">
            Company
        </div>
    </div>

    <div class="panel-body">
        <div class="row form-horizontal xl-mlr10" ng-controller="companyController">
            <form name="CompanyForm" ng-init="loadDropdowns()">
                <div class="row col-xs-12 col-sm-12 col-md-6 col-lg-6 xl-mb30">
                    <input type="text" class="form-control hidden" ng-model="company.CompanyID" />
                    <div class="form-group">
                        <div class="form-inner13">
                            <label class="left-col control-label">Company Name</label>
                            <div class="right-col">
                                <input type="text" class="form-control" ng-model="company.Name" required />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-inner13">
                            <label class="left-col control-label">Code</label>
                            <div class="right-col">
                                <input type="text" class="form-control" ng-model="company.Code" />
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="form-inner13">
                            <label class="left-col control-label">Tax No</label>
                            <div class="right-col">
                                <input type="text" class="form-control" ng-model="company.TaxNo" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-inner13">
                            <label class="left-col control-label">Registration No</label>
                            <div class="right-col">
                                <input type="text" class="form-control" ng-model="company.RegistrationNo" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-inner13">
                            <label class="left-col control-label">Contact</label>
                            <div class="right-col">
                                <input type="text" class="form-control" ng-model="company.ContactNo" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-inner13">
                            <label class="left-col control-label">Email</label>
                            <div class="right-col">
                                <input type="text" class="form-control" ng-model="company.EmailID" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-inner13">
                            <label class="left-col control-label">Address</label>
                            <div class="right-col">
                                <input type="text" class="form-control" ng-model="company.Address" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-inner13">
                            <label class="left-col control-label">Status</label>
                            <div class="right-col">
                                <select class="form-control" ng-model="company.Status"
                                        ng-options="status.id as status.label for status in statusList" required>
                                    <option value="">Select Status</option>
                                </select>
                            </div>
                        </div>
                    </div>


                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <div class="form-group">
                            <div class="form-inner12">
                                <label for="fname" class="left-col control-label"></label>
                                <div class="right-col mt-org1" style="text-align:right">
                                    <button type="button" class="btn btn-success custom-btn1" name="Submit" data-ng-click="saveCompany()">Submit</button>
                                    <button type="button" class="btn btn-default custom-btn1" name="Clear" ng-click="clearData();"><i class="pg-close"></i> Clear</button>
                                </div>
                                <div class="clr"></div>
                            </div>
                        </div>
                    </div>
                </div>


            </form>
        </div>
    </div>
</div>


